                    <input type="text" class="form-control" id="username" placeholder="Enter UserName" name="username">
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control" id="password" placeholder="Enter password" name="password">
                  </div>



 

                  <button type="submit" class="btn btn-primary my-btn dark">login</button>



                  <div class="">
                    <a class="col-md-5" id="show" href="/users/signup">don't have a account</a>
                    <a class="col-md-4 col-sm-offset-3" id="show" href="/users/forgot">forget password?</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


